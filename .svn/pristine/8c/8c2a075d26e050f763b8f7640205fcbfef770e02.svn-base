        gridPane.add(uploadImageNow,1,11);


        vboxForAddPatient.getChildren().addAll(labelAndCrossHbox,gridPane);
      // vboxForAddPatient.setPadding(new Insets(100,0,0,40));
        return vboxForAddPatient;
    }

